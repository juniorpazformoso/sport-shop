{% extends '::base_frontend_struct.html.twig' %}


{% block stylesheet %}
    {{ parent() }}
    
    <link href="{{ asset('web/bundles/global/icheck/skins/square/blue.css') }}" rel="stylesheet" type="text/css"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('web/bundles/metronic/global/plugins/bootstrap-toastr/toastr.css')}}"/>
    
    <style>
        #gruponivcph_servicebundle_client_gender label{
            padding-right: 20px;
        }
    </style>
{% endblock %}

{% block render %}
   
    <div class="row" id="authentication"> 
       <section id="center_column" class="col-md-12">
            <div id="breadcrumbs">
                <div class="row">
                    <div class="small-12 columns">
                        <div class="main-header">
                            <div class="row">
                                <div class="small-12 medium-6 columns">
                                    <h1>
                                          Nueva Dirección			
                                    </h1>
                                </div>
                                <div class="small-12 medium-6 columns hide-for-small">
                                    <aside class="breadcrumb"><a href="{{ path('service_homepage') }}">Pagina principal</a><span>/</span>Autenticación</aside>				
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                                
            {{ form_start(form, {'attr': {'class': 'form-horizontal','id':'form_create_client', 'novalidate' : 'novalidate' }}) }}
                <div class="account_creation">
                    <h3 class="page-subheading">
                        Sus datos personales
                    </h3>
                    
                    <div class="form-group {% if form.address.vars.valid==false %}has-error{% endif %}">
                        <label class="control-label col-sm-4">Dirección <sup>*</sup>
                        </label>
                        <div class="col-sm-6"> 
                            {{ form_widget(form.address, { 'attr': {
                                'required' : 'required',
                                'maxlength' : 60
                                } }) }}
                                {% if form.address.vars.valid==false %}
                                    <span class="help-block"> {{ form_errors(form.address)}}</span>
                                {% endif %}
                        </div>        
                    </div>
                        
                    <div class="form-group {% if form.location.vars.valid==false %}has-error{% endif %}">
                        <label class="control-label col-sm-4">Localidad <sup>*</sup>
                        </label>
                        <div class="col-sm-6"> 
                            {{ form_widget(form.location, { 'attr': {
                                'required' : 'required',
                                'maxlength' : 60
                                } }) }}
                                {% if form.location.vars.valid==false %}
                                    <span class="help-block"> {{ form_errors(form.location)}}</span>
                                {% endif %}
                        </div>        
                    </div>
                        
                        
                    <div class="form-group {% if form.province.vars.valid==false %}has-error{% endif %}">
                        <label class="control-label col-sm-4">Provincia <sup>*</sup>
                        </label>
                        <div class="col-sm-6"> 
                            {{ form_widget(form.province, { 'attr': {
                                'required' : 'required',
                                'maxlength' : 60,
                                'class': 'form-control',
                                'style' : 'background-color:#ebebeb'
                                } }) }}
                                {% if form.province.vars.valid==false %}
                                    <span class="help-block"> {{ form_errors(form.province)}}</span>
                                {% endif %}
                        </div>        
                    </div>
                        
                        
                    <div class="form-group {% if form.community.vars.valid==false %}has-error{% endif %}">
                        <label class="control-label col-sm-4">Comunidad <sup>*</sup>
                        </label>
                        <div class="col-sm-6"> 
                            {{ form_widget(form.community, { 'attr': {
                                'required' : 'required',
                                'maxlength' : 60,
                                'class': 'form-control',
                                'style' : 'background-color:#ebebeb'
                                } }) }}
                                {% if form.community.vars.valid==false %}
                                    <span class="help-block"> {{ form_errors(form.community)}}</span>
                                {% endif %}
                        </div>        
                    </div>
                        
                        
                    <div class="form-group {% if form.town.vars.valid==false %}has-error{% endif %}">
                        <label class="control-label col-sm-4">Población <sup>*</sup>
                        </label>
                        <div class="col-sm-6"> 
                            {{ form_widget(form.town, { 'attr': {
                                'required' : 'required',
                                'maxlength' : 60
                                } }) }}
                                {% if form.town.vars.valid==false %}
                                    <span class="help-block"> {{ form_errors(form.town)}}</span>
                                {% endif %}
                        </div>        
                    </div>
                        
                    
                        
                    <div class="form-group {% if form.postalCode.vars.valid==false %}has-error{% endif %}">
                        <label class="control-label col-sm-4">Código postal <sup>*</sup>
                        </label>
                        <div class="col-sm-6"> 
                            {{ form_widget(form.postalCode, { 'attr': {
                                'required' : 'required',
                                'maxlength' : 60
                                } }) }}
                                {% if form.postalCode.vars.valid==false %}
                                    <span class="help-block">{{ form_errors(form.postalCode)}}</span>
                                {% endif %}
                        </div>
                    </div>
                        
                        
                    <div class="form-group {% if form.city.vars.valid==false %}has-error{% endif %}">
                        <label class="control-label col-sm-4">Ciudad <sup>*</sup>
                        </label>
                        <div class="col-sm-6"> 
                            {{ form_widget(form.city, { 'attr': {
                                'required' : 'required',
                                'maxlength' : 60
                                } }) }}
                                {% if form.city.vars.valid==false %}
                                    <span class="help-block">{{ form_errors(form.city)}}</span>
                                {% endif %}
                        </div>
                    </div>
                        
                    <div class="form-group {% if form.country.vars.valid==false %}has-error{% endif %}">
                        <label class="control-label col-sm-4">País <sup>*</sup>
                        </label>
                        <div class="col-sm-6"> 
                            {{ form_widget(form.country, { 'attr': {
                                'required' : 'required',
                                'class' : 'form-control',
                                'style' : 'background-color:#ebebeb',
                                'maxlength' : 60
                                } }) }}
                                {% if form.country.vars.valid==false %}
                                    <span class="help-block">{{ form_errors(form.country)}}</span>
                                {% endif %}
                        </div>
                    </div>
                        
                    <div class="form-group {% if form.enterprise.vars.valid==false %}has-error{% endif %}">
                        <label class="control-label col-sm-4">Empresa
                        </label>
                        <div class="col-sm-6"> 
                            {{ form_widget(form.enterprise, { 'attr': {
                                'required' : 'required',
                                'class' : 'form-control',
                                'style' : 'background-color:#ebebeb',
                                'maxlength' : 60
                                } }) }}
                                {% if form.enterprise.vars.valid==false %}
                                    <span class="help-block">{{ form_errors(form.enterprise)}}</span>
                                {% endif %}
                        </div>
                    </div>
                    
                    
                        
                    {{ form_widget(form.submit, { 'attr': {
                                'class' : 'btn btn-outline button button-medium',
                                'required' : 'required',
                                'maxlength' : 60
                    } }) }}

                    <p class="pull-right required">
                        <span><sup>*</sup>
                            Campo requerido
                        </span>
                    </p>
                </div>
            {{ form_end(form) }}
        
       </section>
    </div>
   
{% endblock %}

{% block javascript %}
    {{ parent() }}

    <script type='text/javascript' src="{{ asset('web/bundles/frontend/js/jquery.flexslider-min.js')}}"></script>
    <script type='text/javascript' src="{{ asset('web/bundles/frontend/js/jquery.sharrre.min.js')}}"></script>
    <script type='text/javascript' src="{{ asset('web/bundles/frontend/js/magnific-popup/jquery.magnific-popup.min.js')}}"></script>
    
    <script src="{{ asset('web/bundles/global/icheck/icheck.min.js') }}" type="text/javascript"></script>
    <script type="text/javascript" src="{{ asset('web/bundles/metronic/global/plugins/bootstrap-toastr/toastr.min.js')}}"></script>
    <script src="{{ asset('web/bundles/admin/validations/address_client.js')}}"></script>
    
    <script>
        
        $(function (){
            $("input").iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%'
            })
        })
        
        /*
        $("form").submit(function (){
            
            toastr.error("EN contrucción. trabajando")
            
            return false
        })
        */
    </script>
{% endblock %}