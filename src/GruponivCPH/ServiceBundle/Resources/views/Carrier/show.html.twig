{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Carrier</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Transittime</th>
                <td>{{ entity.transitTime }}</td>
            </tr>
            <tr>
                <th>Speedrating</th>
                <td>{{ entity.speedRating }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ entity.logo }}</td>
            </tr>
            <tr>
                <th>Urltracking</th>
                <td>{{ entity.urlTracking }}</td>
            </tr>
            <tr>
                <th>Freeshipping</th>
                <td>{{ entity.freeShipping }}</td>
            </tr>
            <tr>
                <th>Billing</th>
                <td>{{ entity.billing }}</td>
            </tr>
            <tr>
                <th>Maximumpackageheight</th>
                <td>{{ entity.maximumPackageHeight }}</td>
            </tr>
            <tr>
                <th>Maximumpackagewidth</th>
                <td>{{ entity.maximumPackageWidth }}</td>
            </tr>
            <tr>
                <th>Maximumdepthpackage</th>
                <td>{{ entity.maximumDepthPackage }}</td>
            </tr>
            <tr>
                <th>Maximumpackageweight</th>
                <td>{{ entity.maximumPackageWeight }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('carrier') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('carrier_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
