    <script>
        jQuery(document).ready(function () {
            $("#gruponivcph_servicebundle_product_tags").tagsInput();
            
            $('#gruponivcph_servicebundle_product_shortDescription').summernote(
            {
                height: 200
            })
            
            $('#gruponivcph_servicebundle_product_description').summernote(
            {
                height: 300
            })
            
            
        });
    </script>

{% endblock %}