{% extends '::base_metronic_struct.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link rel="stylesheet" type="text/css" href="{{ asset('web/bundles/metronic/global/plugins/bootstrap-toastr/toastr.css')}}"/>
    
    <!-- END PAGE LEVEL STYLES -->
{% endblock %}


{% block rootmenusend %}
    class="start active open"
{% endblock %}

{% block rootmenusendaux %}
    <span class="selected"></span>
{% endblock %}

{% block rootmenusendarrow %}
    open
{% endblock %}

{% block rootmenusendcountry %} class="active" {% endblock %}

{% block render %}

    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <h3 class="page-title">
            Envio País
            <small>Modificar envio</small>
        </h3>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{ path('service_backend_admin') }}">Inicio</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="{{ path('freeshippingcountry') }}">Envíos</a>
                </li>
            </ul>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->

        <div class="row">
            <div class="col-md-12">
                <div class="tabbable tabbable-custom boxless tabbable-reversed">
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_0">
                            <div class="portlet light bg-inverse">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="icon-equalizer font-red-sunglo"></i>
                                        <span class="caption-subject font-red-sunglo bold uppercase">Modificar envío a país</span>
                                        <span class="caption-helper"></span>
                                    </div>
                                    <div id="wait" style="float: right;display: none" class="progress progress-indeterminate">
                                        <div class="win-ring small"></div>
                                    </div>
                                </div>
                                <div class="portlet-body form">
                                    <!-- BEGIN FORM-->
                                    {#<form action="{{ path('admin_news_create') }}"
                                          method="post" {{ form_enctype(form) }} class="form-horizontal">#}
                                    {{ form_start(form, {'attr': {'class': 'form-horizontal','id':'form_sample_1', novalidate : 'novalidate' }}) }}
                                    <div class="alert alert-danger display-hide">
                                        <button class="close" data-close="alert"></button>
                                        El formulario contiene algunos errores. Por favor revise los avisos en rojo.
                                    </div>
                                    <div class="form-body">
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Costo<span class="required">*</span></label>
                                            
                                            <div class="col-md-6">
                                                {{ form_widget(form.price, { 'attr': {
                                                    'class' : 'form-control tags',
                                                    'required' : 'required',
                                                    'maxlength' : 60
                                                    } }) }}
                                                    {{ form_errors(form.price) }}                                                    
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">El envío gratuito comienza a las<span class="required">*</span></label>
                                            
                                            <div class="col-md-6">
                                                {{ form_widget(form.pricefree, { 'attr': {
                                                    'class' : 'form-control tags',
                                                    'required' : 'required',
                                                    'maxlength' : 60
                                                    } }) }}
                                                    {{ form_errors(form.pricefree) }}                                                    
                                            </div>
                                        </div>
                                            
                                        <div class="form-group {% if form.country.vars.valid==false %}has-error{% endif %}">
                                            <label class="col-md-3 control-label">País<span class="required">*</span></label>
                                            
                                            <div class="col-md-6">
                                                {{ form_widget(form.country, { 'attr': {
                                                    'class' : 'form-control tags',
                                                    'required' : 'required',
                                                    'maxlength' : 60
                                                    } }) }}
                                                    
                                                    {% if form.country.vars.valid==false %}
                                                        <span class="help-block">{{ form_errors(form.country)}}</span>
                                                    {% endif %}
                                            </div>
                                        </div>
                                            
                                        <div class="form-group" id="show_accordion">
                                            <label class="control-label col-md-3">Activado</label>
                                            <div class="col-md-9">
                                                {{ form_widget(form.active, { 'attr': {
                                                    'class' : 'make-switch',
                                                    'data-size' : 'normal'
                                                } }) }}
                                            </div>
                                        </div>
                                        
                                    </div>
                                    
                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-4">
                                                {{ form_widget(form.submit, { 'attr': {
                                                'class' : 'btn green',
                                                'label' : 'Crear'
                                                } }) }}
                                                <a href="{{ path('freeshippingcountry') }}"
                                                   class="btn default">Cancelar</a>
                                            </div>
                                        </div>
                                    </div>
                                    {{ form_errors(form) }}
                                    {{ form_end(form) }}
                                    {#</form>#}
                                    <!-- END FORM-->

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- END PAGE CONTENT-->
    </div>

    </div>

    <!-- END CONTENT -->
{% endblock %}

{% block javascript %}
    {{ parent() }}
    
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script type="text/javascript" src="{{ asset('web/bundles/metronic/global/plugins/bootstrap-toastr/toastr.min.js')}}"></script>    
    <script src="{{ asset('web/bundles/admin/validations/sendCountry.js')}}"></script>
    
    <script>
        jQuery(document).ready(function () {
                              
        });
    </script>
    
{% endblock %}
