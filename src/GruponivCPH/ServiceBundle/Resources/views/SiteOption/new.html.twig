{% block javascript %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="{{ asset('web/bundles/metronic/global/plugins/bootstrap-summernote/summernote.min.js')}}" type="text/javascript"></script>
    <script type="text/javascript" src="{{ asset('web/bundles/metronic/global/plugins/bootstrap-select/bootstrap-select.min.js')}}"></script>
    <script type="text/javascript" src="{{ asset('web/bundles/metronic/global/plugins/select2/select2.min.js')}}"></script>
    <script type="text/javascript" src="{{ asset('web/bundles/metronic/global/plugins/jquery-multi-select/js/jquery.multi-select.js')}}"></script>
    <script type="text/javascript" src="{{ asset('web/bundles/metronic/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js')}}"></script>
    <script type="text/javascript" src="{{ asset('web/bundles/metronic/global/plugins/jquery-validation/js/jquery.validate.min.js')}}"></script>

    <script src="{{ asset('web/bundles/metronic/admin/pages/scripts/components-editors.js')}}"></script>
    <script src="{{ asset('web/bundles/metronic/admin/pages/scripts/components-dropdowns.js')}}"></script>
    <script src="{{ asset('web/bundles/metronic/admin/pages/scripts/form-validation.js')}}"></script>
    <!-- END PAGE LEVEL SCRIPTS -->

    <script>
        jQuery(document).ready(function () {

            $('#deleteAll').on('click', function() {
                var imageholder = document.getElementById('image-holder');
                while(imageholder.childElementCount > 0) {
                    imageholder.removeChild(imageholder.childNodes[0]);
                }

                var upload = document.getElementById('upload');
                upload.value = null;
            });

            $('#gruponivcph_servicebundle_article_description').summernote(
                    {
                        height: 200
                    })

            $('#gruponivcph_servicebundle_article_description_en').summernote(
                    {
                        height: 200
                    })

            $('form').on('submit', function (e) {
                //e.preventDefault();
                var textarea = document.getElementById('gruponivcph_servicebundle_article_description');
                textarea.value = $("#gruponivcph_servicebundle_article_description").code();

                var textarea_en = document.getElementById('gruponivcph_servicebundle_article_description_en');
                textarea_en.value = $("#gruponivcph_servicebundle_article_description_en").code();
            });

            $("#upload").on('change', function () {
                //Get count of selected files
                var countFiles = $(this)[0].files.length;

                var imgPath = $(this)[0].value;
                var extn = imgPath.substring(imgPath.lastIndexOf('.') + 1).toLowerCase();
                var image_holder = $("#image-holder");
                image_holder.empty();

                if (extn == "gif" || extn == "png" || extn == "jpg" || extn == "jpeg") {
                    if (typeof (FileReader) != "undefined") {

                        //loop for each file selected for uploaded.
                        for (var i = 0; i < countFiles; i++) {

                            var reader = new FileReader();
                            reader.onload = function (e) {
                                $("<div class='col-md-2 col-xs-3' style='width: 200px; height: 150px'><img src='" + e.target.result + "' class = 'img-thumb img-responsive fileinput-preview thumbnail' /></div>").appendTo(image_holder);
                            }

                            image_holder.show();
                            reader.readAsDataURL($(this)[0].files[i]);
                        }

                    } else {
                        alert("This browser does not support FileReader.");
                    }
                } else {
                    alert("Pls select only images");
                }
            });

            ComponentsEditors.init();
            ComponentsDropdowns.init();
            //FormValidation.init();
        });
    </script>

{% endblock %}