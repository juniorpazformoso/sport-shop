{% extends '::base_metronic_struct.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link rel="stylesheet" type="text/css" href="{{ asset('web/bundles/metronic/global/plugins/bootstrap-summernote/summernote.css')}}">
    <link rel="stylesheet" type="text/css" href="{{ asset('web/bundles/metronic/global/plugins/bootstrap-toastr/toastr.css')}}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('web/bundles/metronic/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css')}}"/>    
    <!-- END PAGE LEVEL STYLES -->
{% endblock %}

{% block rootmenusiteoptions %}
    class="start active open"
{% endblock %}

{% block rootmenusiteoptionsaux %}
    <span class="selected"></span>
{% endblock %}

{% block render %}

    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!-- BEGIN PAGE HEADER-->
            <h3 class="page-title">
                Configuraciones del sitio
                <small>Modificar</small>
            </h3>
            <div class="page-bar">
                <ul class="page-breadcrumb">
                    <li>
                        <i class="fa fa-home"></i>
                        <a href="{{ path('service_backend_admin') }}">Inicio</a>
                        <i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <a href="{{ path('siteoption') }}">Sitio Opciones</a>
                    </li>
                </ul>
            </div>
            <!-- END PAGE HEADER-->
            <!-- BEGIN PAGE CONTENT-->

            <div class="row">
                <div class="col-md-12">
                    <div class="tabbable tabbable-custom boxless tabbable-reversed">
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab_0">
                                <div class="portlet light bg-inverse">
                                    <div class="portlet-title">
                                        <div class="caption">
                                            <i class="icon-equalizer font-red-sunglo"></i>
                                            <span class="caption-subject font-red-sunglo bold uppercase">Sitio opciones</span>
                                            <span class="caption-helper"></span>
                                        </div>
                                    </div>
                                    <div class="portlet-body form">
                                        {% for flashMessage in app.session.flashbag.get('notice') %}
                                            <div class="alert alert-success box">
                                                {{ flashMessage }}
                                            </div>
                                            <div class="clearfix"></div>
                                        {% endfor %}
                                        <!-- BEGIN FORM-->

                                        {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate' : 'novalidate' }}) }}

                                        <div class="form-body">
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    <div class="tabbable tabs-reversed">
                                                        <ul class="nav nav-tabs">
                                                            <li class="active">
                                                                <a href="#tab_6_1" data-toggle="tab" style="vertical-align: middle; ">
                                                                    Correo
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="#tab_6_2" data-toggle="tab">
                                                                    Redes Sociales
                                                                </a>
                                                            </li>                                                            
                                                            <li>
                                                                <a href="#tab_6_3" data-toggle="tab">
                                                                    PayPal
                                                                </a>
                                                            </li>
                                                            
                                                            <li>
                                                                <a href="#tab_6_4" data-toggle="tab">
                                                                    Tipos de pagos activos
                                                                </a>
                                                            </li>
                                                            
                                                            
                                                            
                                                            <!--
                                                            <li>
                                                                <a href="#tab_6_3" data-toggle="tab">
                                                                    Dirección
                                                                </a>
                                                            </li>
                                                            -->
                                                        </ul>
                                                        <div class="tab-content">
                                                            <div class="tab-pane active col-md-10" id="tab_6_1">
                                                                <div class="form-group">
                                                                    <label class="col-md-4 control-label">Nombre de usuario<span class="required"> *</span></label>
                                                                    <div class="col-md-8">
                                                                        {{ form_widget(form.emailServerAddress, { 'attr': {
                                                                        'class' : 'form-control tags',
                                                                        } }) }}
                                                                        {{ form_errors(form.emailServerAddress) }}
                                                                    </div>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label class="col-md-4 control-label">Contraseña<span class="required"> *</span></label>
                                                                    <div class="col-md-8">
                                                                        {{ form_widget(form.emailServerPassword, { 'attr': {
                                                                        'class' : 'form-control tags',
                                                                        } }) }}
                                                                        {{ form_errors(form.emailServerPassword) }}
                                                                    </div>
                                                                </div>
                                                                
                                                                <div class="form-group">
                                                                    <label class="col-md-4 control-label">Servidor de salida de correo (SMTP)<span class="required"> *</span></label>
                                                                    <div class="col-md-8">
                                                                        {{ form_widget(form.emailServerIp, { 'attr': {
                                                                        'class' : 'form-control tags',
                                                                        } }) }}
                                                                        {{ form_errors(form.emailServerIp) }}
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label class="col-md-4 control-label">Puerto de bandeja de salida (TLS debe estar activado)<span class="required"> *</span></label>
                                                                    <div class="col-md-8">
                                                                        {{ form_widget(form.emailServerPort, { 'attr': {
                                                                        'class' : 'form-control tags',
                                                                        } }) }}
                                                                        {{ form_errors(form.emailServerPort) }}
                                                                    </div>
                                                                </div>

                                                                
                                                                <div class="form-group">
                                                                    <label class="col-md-4 control-label">El servidor de salida de correo requiere autenticación<span class="required"> *</span></label>
                                                                    <div class="col-md-8">
                                                                        {{ form_widget(form.authServerSmtp, { 'attr': {
                                                                        'class' : 'form-control make-switch',
                                                                        } }) }}
                                                                        {{ form_errors(form.authServerSmtp) }}
                                                                    </div>
                                                                </div>
                                                                
                                                                

                                                            </div>
                                                            <div class="tab-pane fade col-md-10" id="tab_6_2">
                                                                <div class="form-group">
                                                                    <label class="col-md-3 control-label">Url Instagram<span class="required"> *</span></label>
                                                                    <div class="col-md-9">
                                                                        {{ form_widget(form.instagramUrl, { 'attr': {
                                                                        'class' : 'form-control tags',
                                                                        } }) }}
                                                                        {{ form_errors(form.instagramUrl) }}
                                                                    </div>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label class="col-md-3 control-label">Url Twitter<span class="required"> *</span></label>
                                                                    <div class="col-md-9">
                                                                        {{ form_widget(form.socialTwitterUrl, { 'attr': {
                                                                        'class' : 'form-control tags',
                                                                        } }) }}
                                                                        {{ form_errors(form.socialTwitterUrl) }}
                                                                    </div>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label class="col-md-3 control-label">Url Facebook<span class="required"> *</span></label>
                                                                    <div class="col-md-9">
                                                                        {{ form_widget(form.socialFacebookUrl, { 'attr': {
                                                                        'class' : 'form-control tags',
                                                                        } }) }}
                                                                        {{ form_errors(form.socialFacebookUrl) }}
                                                                    </div>
                                                                </div>



                                                                <div class="form-group">
                                                                    <label class="col-md-3 control-label">Url Youtube<span class="required"> *</span></label>
                                                                    <div class="col-md-9">
                                                                        {{ form_widget(form.youtubeUrl, { 'attr': {
                                                                        'class' : 'form-control tags',
                                                                        } }) }}
                                                                        {{ form_errors(form.youtubeUrl) }}
                                                                    </div>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label class="col-md-3 control-label">Url linkedin<span class="required"> *</span></label>
                                                                    <div class="col-md-9">
                                                                        {{ form_widget(form.linkedinUrl, { 'attr': {
                                                                        'class' : 'form-control tags',
                                                                        } }) }}
                                                                        {{ form_errors(form.linkedinUrl) }}
                                                                    </div>
                                                                </div>
                                                            </div>
                                                                    
                                                            <div class="tab-pane fade col-md-10" id="tab_6_3">
                                                                <div class="form-group">
                                                                    <label class="col-md-3 control-label">Cuenta paypal<span class="required"> *</span></label>
                                                                    <div class="col-md-9">
                                                                        {{ form_widget(form.paypalId, { 'attr': {
                                                                        'class' : 'form-control tags',
                                                                        } }) }}
                                                                        {{ form_errors(form.paypalId) }}
                                                                    </div>
                                                                </div>
                                                                    
                                                                <div class="form-group">
                                                                    <label class="col-md-3 control-label">Tipo moneda<span class="required"> *</span></label>
                                                                    <div class="col-md-9">
                                                                        {{ form_widget(form.currencyCode, { 'attr': {
                                                                        'class' : 'form-control tags',
                                                                        } }) }}
                                                                        {{ form_errors(form.currencyCode) }}
                                                                    </div>
                                                                </div
                                                                
                                                                <div class="form-group" id="show_accordion">
                                                                    <label class="control-label col-md-3">Paypal Sandbox<span class="required"> *</span></label>
                                                                    <div class="col-md-9">
                                                                        {{ form_widget(form.paypalSandbox, { 'attr': {
                                                                            'class' : 'make-switch',
                                                                            'data-size' : 'normal'
                                                                        } }) }}
                                                                    </div>
                                                                </div>
                                                                    
                                                                <div class="tab-pane fade col-md-10" id="tab_6_4">
                                                                    <div class="form-group">
                                                                        <label class="control-label col-md-3">Paypal</label>
                                                                        <div class="col-md-9">
                                                                            {{ form_widget(form.paypalActive, { 'attr': {
                                                                                'class' : 'make-switch',
                                                                                'data-size' : 'normal'
                                                                            } }) }}
                                                                        </div>
                                                                    </div>
                                                                        
                                                                    <div class="form-group">
                                                                        <label class="control-label col-md-3">Tpv</label>
                                                                        <div class="col-md-9">
                                                                            {{ form_widget(form.tpvActive, { 'attr': {
                                                                                'class' : 'make-switch',
                                                                                'data-size' : 'normal'
                                                                            } }) }}
                                                                        </div>
                                                                    </div>
                                                                        
                                                                    <div class="form-group">
                                                                        <label class="control-label col-md-3">Re Payment</label>
                                                                        <div class="col-md-9">
                                                                            {{ form_widget(form.rePaymentActive, { 'attr': {
                                                                                'class' : 'make-switch',
                                                                                'data-size' : 'normal'
                                                                            } }) }}
                                                                        </div>
                                                                    </div>
                                                                        
                                                                    <div class="form-group">
                                                                        <label class="control-label col-md-3">Efectivo</label>
                                                                        <div class="col-md-9">
                                                                            {{ form_widget(form.effectiveActive, { 'attr': {
                                                                                'class' : 'make-switch',
                                                                                'data-size' : 'normal'
                                                                            } }) }}
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="form-actions">
                                            <div class="row">
                                                <div class="col-md-offset-3 col-md-4">
                                                    {{ form_widget(form.submit, { 'attr': {
                                                    'class' : 'btn green',
                                                    'label' : 'Crear'
                                                    } }) }}
                                                    <a href="{{ path('siteoption') }}"
                                                       class="btn default">Cancelar</a>
                                                </div>
                                            </div>
                                        </div>
                                        {{ form_errors(form) }}
                                        {{ form_end(form) }}
                                        {#</form>#}
                                        <!-- END FORM-->

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- END PAGE CONTENT-->
        </div>

    </div>
    <!-- END CONTENT -->
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="{{ asset('web/bundles/metronic/global/plugins/bootstrap-summernote/summernote.min.js')}}" type="text/javascript"></script>
    <script type="text/javascript" src="{{ asset('web/bundles/metronic/global/plugins/bootstrap-toastr/toastr.min.js')}}"></script>
    <script src="{{ asset('web/bundles/admin/validations/siteoption.js')}}"></script>    
    <!-- END PAGE LEVEL SCRIPTS -->

    <script>
        jQuery(document).ready(function () {

            $('#gruponivcph_servicebundle_siteoption_address').summernote(
            {
                height: 200
            })



            $('form').on('submit', function (e) {
                var textarea = document.getElementById('gruponivcph_servicebundle_siteoption_address')
                textarea.value = $("#gruponivcph_servicebundle_siteoption_address").code()
            })


        });
    </script>

{% endblock %}