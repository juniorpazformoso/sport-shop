{% extends '::base.html.twig' %}

{% block body -%}
    <h1>SiteOption list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Emailserverip</th>
                <th>Emailserverport</th>
                <th>Emailserverprotocol</th>
                <th>Emailserveraddress</th>
                <th>Emailserverpassword</th>
                <th>Socialfacebookurl</th>
                <th>Socialgplusurl</th>
                <th>Youtubeurl</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('siteoption_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.emailServerIp }}</td>
                <td>{{ entity.emailServerPort }}</td>
                <td>{{ entity.emailServerProtocol }}</td>
                <td>{{ entity.emailServerAddress }}</td>
                <td>{{ entity.emailServerPassword }}</td>
                <td>{{ entity.socialFacebookUrl }}</td>
                <td>{{ entity.socialgplusUrl }}</td>
                <td>{{ entity.youtubeUrl }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('siteoption_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('siteoption_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('siteoption_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
