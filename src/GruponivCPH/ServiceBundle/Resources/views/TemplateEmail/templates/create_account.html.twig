<html>
    <head>
        <link href="{{ app.request.schemeAndHttpHost ~ asset('web/bundles/metronic/global/plugins/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css"/>
    </head>
    
    <body>
        <br><br>
        <div class="container" style="border-radius: 5px !important; padding: 0; width: 900px; border: 1px solid silver;">
            <div style="background-color: black; color: white; padding: 20px; border-radius: 5px;">
                <div class="pull-left" style="position: relative; bottom: 5px;">
                    <h3>Bienvenido a Dabber-Spain</h3>
                </div>
                
                <div class="pull-right">
                    <img width="200" src="{{ app.request.schemeAndHttpHost ~ asset('web/uploads/logo.png') }}" class="logoimg" alt="Dabber Spain">
                </div>
                
                <div class="clearfix"></div>
            </div>
                
            <div class="content" style="padding: 20px;">
                {% if demo is defined %}
                    {% include "ServiceBundle:TemplateEmail:templatesDemo/create_demo_account.html.twig" %}
                {% else %}
                    <h4>Bienvenido {{ client }} Se ha dado de alta en nuestra tienda ONLINE.</h4>
                    <h4>Ya solo queda confirmar en el siguiente enlace</h4>
                    
                    <a TARGET="_NEW" href="{{ absolute_url(path('service_confirm_account', {'token' : token })) }}">{{ absolute_url(path('service_confirm_account', {'token' : token })) }}</a>
                {% endif %}
            </div>
        </div>
    </body>
</html>